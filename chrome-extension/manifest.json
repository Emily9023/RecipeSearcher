{
	"manifest_version": 2,

	"name": "Recipe Scraper",
	"description": "A simple page-scraping extension for Chrome",
	"version": "1.0",
	"author": "@emily9023",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
				"http://127.0.0.1:5000/"
    ],
	"browser_action": {
    "default_icon": {
        "16": "public/chrome-extension/logo/logo.png"
    },
		"default_popup": "popup.html"
	}
}